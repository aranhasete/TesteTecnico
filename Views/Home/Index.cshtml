@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid centro-content">
    <div class="row">
        <div class="col-lg-12">
            <section id="emailForm">
                @using (@Html.BeginForm("SendEmail", "Home", FormMethod.Post, new { @Id = "formEmail" }))
                {
                    <div class="form-group">
                        <div class="col-md-10">
                            <h6>E-Mail</h6>
                            @Html.TextBox("emailTo", null, new { type = "email", required = "required", @class = "container select-custom" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.CheckBox("acceptCheck", false, new { required = "required"})
                                @Html.Label("I accept the terms and coditions applied")
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-10">
                            <input type="submit" value="Proceed" class="btn btn" />
                        </div>
                    </div>

                }
            </section>
        </div>
    </div>
</div>